%ul.nav.nav-tabs
  %li{ role:'presentation' }= link_to 'Aktueller Stand', overview_race_path(@race)
  %li{ role:'presentation' }= link_to 'Einstellungen', settings_race_path(@race)
  %li.active{ role:'presentation' }= link_to 'Teams', race_teams_path(@race)
  %li{ role:'presentation' }= link_to 'Events', race_events_path(@race)

%table.table
  %colgroup
    %col
    %col{ width:110 }
    %col{ width:110 }
    %col{ width:110 }
  %thead
    %tr
      %th= sort_link @q, :name
      %th.text-center Anzahl Fahrer
      %th
      %th

  %tbody
    - @teams.each do |team|
      %tr
        %td= link_to team.name, [@race, team]
        %td.text-center= team.attendances.size
        %td.text-right
          = link_to edit_race_team_path(@race, team) do
            = fa_icon 'edit fw'
            = t(:edit)
        %td.text-right
          = link_to [@race, team], :method => :delete, data:{ confirm:t(:confirm) } do
            = fa_icon 'trash fw'
            = t(:destroy)

= paginate @teams

%p
  = link_to 'Neues Team', new_race_team_path(@race), class:'btn btn-primary'
