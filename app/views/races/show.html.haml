%ul.nav.nav-tabs{ role:'tablist' }
  %li.active{ role:'presentation' }= link_to 'Teams', '#teams', role:'tab', data:{ toggle:'tab' }
  %li{ role:'presentation' }= link_to 'Einstellungen', '#settings', role:'tab', data:{ toggle:'tab' }

.tab-content
  .tab-pane.active#teams{ role:'tabpanel' }
    .block-grid-xs-2.block-grid-sm-4.block-grid-md-6
      - @race.teams.includes(:attendances).each do |team|
        %div
          .team.panel.panel-default.panel-info.panel-compact
            .panel-heading
              %h4.panel-title
                .pull-right
                  00:00:00
                = link_to team.name, '#'
            %table.table.table-condensed
              %tbody
                %tr
                  %th.text-muted= fa_icon 'clock-o'
                  %td.text-right 00:00:00
                %tr
                  %th.text-muted= fa_icon 'user'
                  %td.text-right
                    = team.last_driver.name


  .tab-pane#settings{ role:'tabpanel' }
    %table.table
      %tbody
        %tr
          %th Name
          %td= @race.name
    %p
      = link_to t('edit'), edit_race_path(@race), class:'btn btn-primary'
      = link_to t('back'), races_path, class:'btn btn-default'
