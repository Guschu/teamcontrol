%ul.nav.nav-tabs{ role:'tablist' }
  %li.active{ role:'presentation' }= link_to 'Teams', '#teams', role:'tab', data:{ toggle:'tab' }
  %li{ role:'presentation' }= link_to 'Einstellungen', '#settings', role:'tab', data:{ toggle:'tab' }

.tab-content
  .tab-pane.active#teams{ role:'tabpanel' }
    .block-grid-xs-2.block-grid-sm-4.block-grid-md-6
      - c = Time.zone.now.to_i*1000
      - @race.teams.includes(:attendances).each do |team|
        %div
          .team.panel.panel-default.panel-info.panel-compact
            .panel-heading
              %h4.panel-title
                .pull-right
                  %span.timer{ data:{ mode:'countdown', duration:(60*5), current:c } } 00:00
                = link_to team.name, '#'
            %table.table.table-condensed
              %tbody
                %tr
                  %th.text-muted= fa_icon 'clock-o'
                  %td.text-right
                    %span.timer{ data:{ mode:'timer', current:c } } 00:00
                %tr
                  %th.text-muted= fa_icon 'user'
                  %td.text-right
                    = team.last_driver.name


  .tab-pane#settings{ role:'tabpanel' }
    %table.table.table-striped
      %colgroup
        %col{ width:'20%' }
        %col
      %tbody
        %tr
          %th= Race.human_attribute_name :name
          %td= @race.name
        %tr
          %th= Race.human_attribute_name :state
          %td= t @race.state, scope:'race.states'
        %tr
          %th= Race.human_attribute_name :mode
          %td= t @race.mode, scope:'race.modes'
        %tr
          %th= Race.human_attribute_name :max_drive
          %td= @race.max_drive
        %tr
          %th= Race.human_attribute_name :max_turn
          %td= @race.max_turn
        %tr
          %th= Race.human_attribute_name :break_time
          %td= @race.break_time
        %tr
          %th= Race.human_attribute_name :waiting_period
          %td= @race.waiting_period

    %p
      = link_to t('edit'), edit_race_path(@race), class:'btn btn-primary'
      = link_to t('back'), races_path, class:'btn btn-default'
