%nav.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle{ type:'button', data:{ target:'.navbar-collapse', toggle:'collapse'} }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      - if current_race?
        = link_to root_path, class: 'navbar-brand' do
          = current_race.name
          - if current_race.active?
            %span.timer{ data:{ mode:'timer', start:current_race.started_at.to_time.to_i*1000 } }= current_race.race_time.utc.strftime('%H:%M:%S')
            &mdash;
            %span.timer{ data:{ mode:'countdown', duration:current_race.duration*60, start:current_race.started_at.to_time.to_i*1000 } }
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Fahrer', drivers_path
        %li= link_to 'Rennen', races_path
        %li.dropdown
          %a.dropdown-toggle{ href:'#', role:'button', data:{toggle:'dropdown'} }
            Admin
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Stationen', admin_stations_path
            %li= link_to 'Benutzer', admin_users_path
