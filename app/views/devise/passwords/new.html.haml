.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h1.panel-title Passwort vergessen?
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        .panel-body
          = f.error_notification
          = f.input :email, required: true, autofocus: true, hint:t('send_paranoid_instructions', scope:'devise.passwords')
        .panel-footer
          = f.button :submit, t('.send')

    = render "devise/shared/links"
