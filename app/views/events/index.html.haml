= render partial:'races/header'

.content
  .row
    .col-md-9
      %table.table
        %thead
          %tr
            %th Name
            %th Fahrer
            %th
            %th

        - if @events.any?
          %tbody
            - @events.each do |event|
              %tr
                %td= link_to event.team.name, [@race, team]
                %td= event.driver.name
        - else
          %tbody
            %tr.info
              %td{ colspan:4 }
                %p.text-center Zu diesem Rennen gibt es noch keine Event-Daten.

      = paginate @events
